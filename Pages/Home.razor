@page "/"
@using portfolio.igormagno.com.Data
@using portfolio.igormagno.com.Data.Enums

<PageTitle>Igor Magno - Engenheiro de Software</PageTitle>

<!-- HERO -->
<MudContainer id="hero" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16" Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudGrid AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <MudItem xs="12" md="6">
                    <MudStack Spacing="4">
                        <!-- NOME -->
                        <MudText Typo="Typo.h3">
                            Igor Magno
                        </MudText>
                        <!-- TÍTULO -->
                        <MudText Typo="Typo.h5" Color="Color.Primary">
                            Engenheiro de Software
                        </MudText>
                        <!-- DESCRIÇÃO -->
                        <MudText Typo="Typo.body1" Style="max-width: 520px;">
                            Desenvolvo sistemas web, aplicativos e soluções digitais sob medida,
                            com foco em performance, escalabilidade e impacto real no negócio.
                        </MudText>
                        <!-- BOTÕES -->
                        <MudStack Row="true" Spacing="2">
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Href="@emailLink"
                                       Target="_blank">
                                Entrar em contato
                            </MudButton>
                            <MudButton Variant="Variant.Outlined"
                                       Color="Color.Inherit"
                                       Href="/igor-magno-cv-padrao.pdf"
                                       StartIcon="@Icons.Material.Filled.Download">
                                Baixar CV
                            </MudButton>
                        </MudStack>
                        <!-- REDES -->
                        <MudStack Row="true" Spacing="1">
                            <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                                           Href="@gitHubLink"
                                           Target="_blank"/>
                            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn"
                                           Href="@linkedinLink"
                                           Target="_blank"/>
                        </MudStack>
                    </MudStack>
                </MudItem>
                <!-- MÉTRICAS -->
                <MudItem xs="12" md="4">
                    <MudGrid Spacing="3">
                        <!-- Projetos -->
                        <MudItem xs="6">
                            <MudPaper Class="pa-6 text-center">
                                <MudText Typo="Typo.h3" Color="Color.Primary"
                                         Style="font-family: Exile, system-ui; font-weight: 400">
                                    +@ProjectsDelivered
                                </MudText>
                                <MudText Typo="Typo.caption">
                                    projetos entregues
                                </MudText>
                            </MudPaper>
                        </MudItem>
                        <!-- Anos -->
                        <MudItem xs="6">
                            <MudPaper Class="pa-6 text-center">
                                <MudText Typo="Typo.h3" Color="Color.Primary"
                                         Style="font-family: Exile, system-ui; font-weight: 400">
                                    +@YearsOfExperience
                                </MudText>
                                <MudText Typo="Typo.caption">
                                    anos de experiência
                                </MudText>
                            </MudPaper>
                        </MudItem>
                        <!-- Clientes -->
                        <MudItem xs="6">
                            <MudPaper Class="pa-6 text-center">
                                <MudText Typo="Typo.h3" Color="Color.Primary"
                                         Style="font-family: Exile, system-ui; font-weight: 400">
                                    +@CustomersServed
                                </MudText>
                                <MudText Typo="Typo.caption">
                                    clientes atendidos
                                </MudText>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- SERVIÇOS -->
<MudContainer id="services" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16 mud-theme-primary"
              Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudStack Spacing="6">
                <MudText Typo="Typo.h4">
                    Serviços
                </MudText>
                <MudGrid Spacing="4">
                    @foreach (var service in Services.List)
                    {
                        <MudItem xs="12" sm="6" md="3">
                            <MudPaper Class="pa-6"
                                      Style="height:100%;">
                                <MudStack Spacing="2">
                                    <MudText Typo="Typo.h6">
                                        @service.Name
                                    </MudText>
                                    <MudText Typo="Typo.body2">
                                        @service.Description
                                    </MudText>
                                </MudStack>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- PROJETOS -->
<MudContainer id="projects" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16" Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudStack Spacing="6">
                <MudStack Row="true" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.h4">
                        Projetos
                    </MudText>
                </MudStack>
                <MudGrid Spacing="4">
                    @foreach (var project in ShowAllProjects ? Projects.List : Projects.ResumeList)
                    {
                        <MudItem xs="12" sm="6" md="3">
                            <MudPaper Class="pa-6"
                                       Style="height:100%;">
                                <MudStack Spacing="3">
                                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                        @if (project.LogoLink != null)
                                        {
                                            <MudAvatar Size="Size.Medium">
                                                <MudImage Src="@project.LogoLink"/>
                                            </MudAvatar>
                                        }
                                        <MudText Typo="Typo.h6">
                                            @project.Name
                                        </MudText>
                                    </MudStack>
                                    <MudText Typo="Typo.body2">
                                        @project.Description
                                    </MudText>
                                    @if (project.Link != null)
                                    {
                                        <MudButton Variant="Variant.Text"
                                                   Color="Color.Primary"
                                                   Href="@project.Link"
                                                   Target="_blank">
                                            Ver projeto →
                                        </MudButton>
                                    }
                                </MudStack>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>
                <MudStack Row="true" Justify="Justify.Center">
                    <MudButton Variant="Variant.Text" Color="Color.Inherit" Size="Size.Large"
                               OnClick="ShowAllProjectsToogle">Ver @(ShowAllProjects ? "menos" : "mais")</MudButton>
                </MudStack>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- EXPERIÊNCIA -->
<MudContainer id="experiences" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16 mud-theme-primary"
              Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudStack Spacing="6">
                <MudText Typo="Typo.h4">
                    Experiência
                </MudText>
                <MudTimeline TimelinePosition="TimelinePosition.Start" TimelineAlign="TimelineAlign.Start">
                    @foreach (var experience in ShowAllExperience ? Experiences.List : Experiences.ResumeList)
                    {
                        <MudTimelineItem Color="Color.Surface">
                            <ItemContent>
                                <MudText Typo="Typo.subtitle1">
                                    @experience.title
                                </MudText>
                                <MudText Typo="Typo.caption">
                                    @experience.tag
                                </MudText>
                                <MudText Typo="Typo.body2">
                                    @experience.description
                                </MudText>
                            </ItemContent>
                        </MudTimelineItem>
                    }
                </MudTimeline>
                <MudStack Row="true" Justify="Justify.Center">
                    <MudButton Variant="Variant.Text" Color="Color.Inherit" Size="Size.Large"
                               OnClick="ShowAllExperienceToogle">Ver @(ShowAllExperience ? "menos" : "mais")</MudButton>
                </MudStack>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- TECNOLOGIAS -->
<MudContainer id="skills" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16" Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudStack Spacing="6">
                <MudText Typo="Typo.h4">
                    Tecnologias & Habilidades
                </MudText>
                <MudPaper Class="pa-6">
                    <MudStack Spacing="4">
                        <MudStack>
                            <MudText Typo="Typo.subtitle1">
                                Linguagens
                            </MudText>
                            <MudStack Row="true" Wrap="Wrap.Wrap">
                                @foreach (var skill in LanguageSkills)
                                {
                                    <MudChip T="string">
                                        @skill.Name
                                    </MudChip>
                                }
                            </MudStack>
                        </MudStack>
                        <MudStack>
                            <MudText Typo="Typo.subtitle1">
                                Frameworks
                            </MudText>
                            <MudStack Row="true" Wrap="Wrap.Wrap">
                                @foreach (var skill in FrameworkAndLibSkills)
                                {
                                    <MudChip T="string">
                                        @skill.Name
                                    </MudChip>
                                }
                            </MudStack>
                        </MudStack>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>

<!-- CTA -->
<MudContainer id="contato" MaxWidth="MaxWidth.False" Class="d-flex align-center py-16 mud-theme-primary"
              Style="min-height: 70dvh">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudPaper Class="pa-10 text-center">
                <MudStack Spacing="3" AlignItems="AlignItems.Center">
                    <MudText Typo="Typo.h5">
                        Vamos construir seu projeto?
                    </MudText>
                    <MudText Typo="Typo.body2">
                        Estou disponível para novos projetos e oportunidades.
                    </MudText>
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Href="@emailLink"
                               Target="_blank">
                        Entrar em contato
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {

    private string gitHubLink = "https://github.com/igor-magno";
    private string linkedinLink = "https://www.linkedin.com/in/igor-magno/";
    private string emailLink = "https://mail.google.com/mail/?view=cm&fs=1&to=igormagno.dev@gmail.com";

    private IEnumerable<Skill> LanguageSkills =>
        Skills.List.Where(s => s.Type == SkillType.Language);

    private IEnumerable<Skill> FrameworkAndLibSkills =>
        Skills.List.Where(s => s.Type == SkillType.Framework || s.Type == SkillType.Lib);

    private int YearsOfExperience = DateTime.Now.Year - 2018 - 1;
    private int ProjectsDelivered = Projects.List.Length - 1;

    private int CustomersServed =
        Projects.List.Where(s => s.Client != null).GroupBy(s => s.Client).Count() - 1;

    private bool ShowAllProjects = false;

    private void ShowAllProjectsToogle()
    {
        ShowAllProjects = !ShowAllProjects;
    }

    private bool ShowAllExperience = false;

    private void ShowAllExperienceToogle()
    {
        ShowAllExperience = !ShowAllExperience;
    }

}
