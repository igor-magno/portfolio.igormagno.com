@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <!-- LOGO -->
        <MudText Typo="Typo.h4"
                 Style="font-family: Exile, system-ui; font-weight: 400"
                 Color="Color.Primary">
            IM
        </MudText>
        <MudSpacer/>
        <!-- MENU DESKTOP -->
        <MudHidden Breakpoint="Breakpoint.MdAndDown">
            <MudStack Row="true" Spacing="5">
                <MudButton Href="#hero"
                           Variant="Variant.Text">
                    Início
                </MudButton>
                <MudButton Href="#services"
                           Variant="Variant.Text">
                    Serviços
                </MudButton>
                <MudButton Href="#projects"
                           Variant="Variant.Text">
                    Projetos
                </MudButton>
                <MudButton Href="#experiences"
                           Variant="Variant.Text">
                    Experiência
                </MudButton>
                <MudButton Href="#skills"
                           Variant="Variant.Text">
                    Tecnologias
                </MudButton>
                <MudButton Href="#contato"
                           Variant="Variant.Text">
                    Contato
                </MudButton>
            </MudStack>
        </MudHidden>
        <!-- DARK MODE -->
        <MudSwitch @bind-Value="_isDarkMode"
                   ThumbIcon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                   ThumbIconColor="@(_isDarkMode ? Color.Success : Color.Warning)"
                   Class="mx-2"
                   T="bool"/>
        <!-- MENU MOBILE -->
        <MudHidden Breakpoint="Breakpoint.LgAndUp">
            <MudMenu Dense
                     Variant="Variant.Text"
                     Size="Size.Medium"
                     Icon="@Icons.Material.Filled.Menu">
                <MudMenuItem Href="#hero"
                             Icon="@Icons.Material.Filled.Home"
                             Label="Início"/>
                <MudMenuItem Href="#services"
                             Icon="@Icons.Material.Filled.DesignServices"
                             Label="Serviços"/>
                <MudMenuItem Href="#projects"
                             Icon="@Icons.Material.Filled.Work"
                             Label="Projetos"/>
                <MudMenuItem Href="#experiences"
                             Icon="@Icons.Material.Filled.Badge"
                             Label="Experiência"/>
                <MudMenuItem Href="#skills"
                             Icon="@Icons.Material.Filled.Code"
                             Label="Tecnologias"/>
                <MudMenuItem Href="#contato"
                             Icon="@Icons.Material.Filled.Email"
                             Label="Contato"/>
            </MudMenu>
        </MudHidden>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <MudAppBar Fixed="false" Elevation="0" Bottom="true">
        <MudSpacer/>
        <MudText Typo="Typo.caption"
                 Align="Align.Center"
                 Color="Color.Inherit">
            © 2018 - @DateTime.Now.Year @title
        </MudText>
        <MudSpacer/>
    </MudAppBar>
</MudLayout>

@code {
    private bool _isDarkMode;
    private string title = "Igor Magno";

    private MudTheme _theme = new MudTheme
    {
        PaletteLight = new PaletteLight
        {
            // Primárias
            Primary = "#7b9cff",
            Secondary = "#80d4ff",
            Tertiary = "#b399ff",

            // Estados
            Success = "#85e0a3",
            Warning = "#ffd966",
            Error = "#ff8a8a",

            // Backgrounds
            Background = "#f8fafc",
            Surface = "#ffffff",

            // Texto
            TextPrimary = "#2d3748",
            TextSecondary = "#a0aec0",

            // AppBar
            AppbarBackground = "#ffffff",
            AppbarText = "#2d3748",

            // Divisores
            Divider = "#e2e8f0",
        },

        PaletteDark = new PaletteDark
        {
            Primary = "#88a6ff",
            Secondary = "#8dd8ff",
            Tertiary = "#bba3ff",

            Success = "#91e3ac",
            Warning = "#ffdd75",
            Error = "#ff9696",

            Background = "#1e2430",
            Surface = "#2d3748",

            TextPrimary = "#f8fafc",
            TextSecondary = "#a0aec0",

            AppbarBackground = "#2d3748",
            AppbarText = "#ffffff",

            Divider = "#424b5d",
        },

        LayoutProperties = new LayoutProperties
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        },
    };

}
